<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchAreaActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:orientation="vertical">

         <LinearLayout
             android:id="@+id/LinearLayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_districtName"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:entries="@array/districtName">
            </Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="horizontal">

                  <TextView
                      android:id="@+id/textView_selectDate"
                      android:layout_width="134dp"
                      android:layout_height="match_parent"
                      android:layout_toRightOf="@+id/spinner_districtName"
                      android:text="날짜 선택"
                      android:textSize="25dp" />

                  <TextView
                      android:id="@+id/textView_selectTime"
                      android:layout_width="130dp"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/textView_selectDate"
                      android:text="시간 선택"
                      android:textSize="25dp" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="5"
                   android:orientation="horizontal">

                  <Button
                      android:id="@+id/button_search"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Search" />
               </LinearLayout>

            </LinearLayout>

         </LinearLayout>

         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="210dp"
             android:layout_below="@+id/textView_districtResult">

            <TextView
                android:id="@+id/textView_weatherParsedData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Weather Parsed Data Here"
                android:padding="5dp"
                android:textSize="24sp" />
         </ScrollView>

         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
         </ScrollView>

         <ListView
             android:id="@+id/listView"
             android:layout_width="match_parent"
             android:layout_height="479dp" />

      </LinearLayout>
   </ScrollView>






</LinearLayout>